<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#232323">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/img_champion_fragbuilds"
        android:background="#232323" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_champion_name_fragbuilds"
        android:id="@+id/tv_champion_name_fragbuilds"
        android:textSize="14dp"
        android:textColor="#d5d5d5"
        android:layout_alignBottom="@+id/img_champion_fragbuilds"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/img_champion_fragbuilds"
        android:layout_alignEnd="@+id/img_champion_fragbuilds"
        android:background="#c8232323"
        android:focusable="false"
        android:singleLine="true"
        android:gravity="center" />
</RelativeLayout>